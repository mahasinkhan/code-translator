  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.0",
    "inquirer": "^9.2.0",
    "mime-types": "^2.1.35",
    "openai": "^4.0.0",
    "tree-sitter": "^0.20.4",
    "tree-sitter-java": "^0.20.2",
    "tree-sitter-javascript": "^0.20.1",
    "tree-sitter-python": "^0.20.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
