{
  "name": "code-translator",
  "version": "0.1.0",
  "description": "AI-powered programming language converter that translates code between different languages",
  "main": "dist/index.js",
  "bin": {
    "code-translator": "./dist/cli/index.js",
    "ct": "./dist/cli/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
